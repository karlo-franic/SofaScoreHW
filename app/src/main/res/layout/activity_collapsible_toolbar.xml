<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_0"
    tools:context=".CollapsibleToolbarActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_collapsibe"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/surface_1"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="">

            <ImageButton
                android:id="@+id/back_btn_city"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="16dp"
                android:elevation="1dp"
                android:backgroundTint="@color/surface_1"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/city_title"
                style="@style/Headline1DarkLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:elevation="3dp"
                android:gravity="bottom"
                android:textSize="30dp" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/city_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="374dp"
                android:background="@color/surface_1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/city_big_title"
                    style="@style/Headline1DarkLeft"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/dark"
                    android:textSize="30sp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/city_top_container"
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:background="@color/surface_1">

                    <TextView
                        android:id="@+id/date"
                        style="@style/Headline3DarkLeft"
                        android:layout_width="144dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/dark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/time"
                        style="@style/Headline3DarkLeft"
                        android:layout_width="144dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/dark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@id/condition_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/date" />

                    <TextView
                        android:id="@+id/condition_text"
                        style="@style/BodyColdGrayLeft"
                        android:layout_width="144dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/cold_gray"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/time" />

                    <TextView
                        android:id="@+id/today_temp"
                        style="@style/Display1DarkRight"
                        android:layout_width="96dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/dark"
                        android:textSize="54sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/today_icon"
                        app:layout_constraintStart_toEndOf="@+id/time"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/today_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/today_temp"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/dark_alpha" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:columnCount="3"
                    android:paddingStart="24dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="16dp"
                    android:rowCount="2">

                    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/min_max_temp_container"
                        android:layout_width="120dp"
                        android:layout_height="96dp">

                        <ImageView
                            android:id="@+id/min_max_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="48dp"
                            android:src="@drawable/ic_thermostat"
                            app:layout_constraintBottom_toTopOf="@+id/min_max_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/min_max_text"
                            style="@style/DescriptionColdGrayCenter"
                            android:layout_width="104dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:text="@string/min_max"
                            android:textColor="@color/cold_gray"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/min_max_result"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/min_max_icon" />

                        <TextView
                            android:id="@+id/min_max_result"
                            style="@style/BodyDarkCenter"
                            android:layout_width="104dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/min_max_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/wind_container"
                        android:layout_width="120dp"
                        android:layout_height="96dp">

                        <ImageView
                            android:id="@+id/wind_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="48dp"
                            android:src="@drawable/ic_wind"
                            app:layout_constraintBottom_toTopOf="@+id/wind_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/wind_text"
                            style="@style/DescriptionColdGrayCenter"
                            android:layout_width="104dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:text="@string/wind"
                            android:textColor="@color/cold_gray"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/wind_result"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/wind_icon" />

                        <TextView
                            android:id="@+id/wind_result"
                            style="@style/BodyDarkCenter"
                            android:layout_width="104dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/wind_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/humidity_container"
                        android:layout_width="120dp"
                        android:layout_height="96dp">

                        <ImageView
                            android:id="@+id/humidity_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="48dp"
                            android:src="@drawable/ic_humidity"
                            app:layout_constraintBottom_toTopOf="@+id/humidity_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/humidity_text"
                            style="@style/DescriptionColdGrayCenter"
                            android:layout_width="104dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:text="@string/humidity"
                            android:textColor="@color/cold_gray"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/humidity_result"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/humidity_icon" />

                        <TextView
                            android:id="@+id/humidity_result"
                            style="@style/BodyDarkCenter"
                            android:layout_width="104dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/humidity_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/pressure_container"
                        android:layout_width="120dp"
                        android:layout_height="96dp">

                        <ImageView
                            android:id="@+id/pressure_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="48dp"
                            android:src="@drawable/ic_pressure"
                            app:layout_constraintBottom_toTopOf="@+id/pressure_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/pressure_text"
                            style="@style/DescriptionColdGrayCenter"
                            android:layout_width="104dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:text="@string/pressure"
                            android:textColor="@color/cold_gray"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/pressure_result"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pressure_icon" />

                        <TextView
                            android:id="@+id/pressure_result"
                            style="@style/BodyDarkCenter"
                            android:layout_width="104dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pressure_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/visibility_container"
                        android:layout_width="120dp"
                        android:layout_height="96dp">

                        <ImageView
                            android:id="@+id/visibility_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="48dp"
                            android:src="@drawable/ic_visibility"
                            app:layout_constraintBottom_toTopOf="@+id/visibility_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/visibility_text"
                            style="@style/DescriptionColdGrayCenter"
                            android:layout_width="104dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:text="@string/visibility"
                            android:textColor="@color/cold_gray"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/visibility_result"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/visibility_icon" />

                        <TextView
                            android:id="@+id/visibility_result"
                            style="@style/BodyDarkCenter"
                            android:layout_width="104dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/visibility_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/accuracy_container"
                        android:layout_width="120dp"
                        android:layout_height="96dp">

                        <ImageView
                            android:id="@+id/accuracy_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="48dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="48dp"
                            android:src="@drawable/ic_accuracy"
                            app:layout_constraintBottom_toTopOf="@+id/accuracy_text"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/accuracy_text"
                            style="@style/DescriptionColdGrayCenter"
                            android:layout_width="104dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:text="@string/accuracy"
                            android:textColor="@color/cold_gray"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toTopOf="@+id/accuracy_result"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/accuracy_icon" />

                        <TextView
                            android:id="@+id/accuracy_result"
                            style="@style/BodyDarkCenter"
                            android:layout_width="104dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/dark"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/accuracy_text" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </GridLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/next_days_card_view"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                app:cardBackgroundColor="@color/White"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout_next_days"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/next_days_text"
                        style="@style/Headline3ColdGrayLeft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/next_days"
                        android:textColor="@color/cold_gray"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@id/next_days_linearlayout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/next_days_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="112dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/next_days_text">

                        <LinearLayout
                            android:id="@+id/first_day"
                            android:layout_width="64dp"
                            android:layout_height="112dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/first_day_text"
                                style="@style/DescriptionColdGrayCenter"
                                android:layout_width="48dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="6dp"
                                android:textColor="@color/cold_gray"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/first_day_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/first_day_temp"
                                style="@style/Headline3DarkCenter"
                                android:layout_width="48dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/dark"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/second_day"
                            android:layout_width="64dp"
                            android:layout_height="112dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="0dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/second_day_text"
                                style="@style/DescriptionColdGrayCenter"
                                android:layout_width="48dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="6dp"
                                android:textColor="@color/cold_gray"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/second_day_icon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/second_day_temp"
                                style="@style/Headline3DarkCenter"
                                android:layout_width="48dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/dark"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/third_day"
                            android:layout_width="64dp"
                            android:layout_height="112dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="0dp"
